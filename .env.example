# ========================================
# Universal Project Manager - Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# ========================================

# ========================================
# ANTHROPIC API CONFIGURATION
# ========================================
# Get your API key from: https://console.anthropic.com/
# Required for AI-powered project analysis and recommendations
VITE_ANTHROPIC_API_KEY=sk-ant-api03-your-api-key-here

# ========================================
# BACKEND URL CONFIGURATION
# ========================================
# Local Development:
VITE_BACKEND_URL=http://localhost:3001

# Production (Render/Railway/etc):
# VITE_BACKEND_URL=https://your-backend-url.onrender.com

# ========================================
# OPTIONAL CONFIGURATION
# ========================================
# Use mock AI responses (for testing without API key)
# Set to 'true' to enable mock mode, 'false' or omit to use real API
VITE_USE_MOCK_AI=false

# ========================================
# BACKEND-ONLY VARIABLES (server/index.js)
# ========================================
# These are only needed when running the backend server

# Port for backend server (default: 3001)
PORT=3001

# Frontend URL for CORS (production only - set in Render environment)
# Local development doesn't need this (localhost is always allowed)
# FRONTEND_URL=https://your-frontend-url.onrender.com

# Node environment
NODE_ENV=development

# ========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ========================================
# Database connection settings

# Local Development:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=universal_project_manager
DB_USER=postgres
DB_PASSWORD=your-database-password-here

# Enable SSL for database connection (required for cloud databases like Render)
# Set to 'true' for production, 'false' for local development
DB_SSL=false

# Production (Render/Railway/etc):
# Use DATABASE_URL if provided by hosting platform (e.g., Render)
# DATABASE_URL=postgresql://user:password@host:port/database

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
# Session secret for express-session
# IMPORTANT: Change this to a long, random string in production!
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-session-secret-change-in-production

# API Key Encryption Secret (for encrypting stored API keys)
# IMPORTANT: Change this to a long, random string in production!
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEY_ENCRYPTION_SECRET=your-encryption-secret-change-in-production
